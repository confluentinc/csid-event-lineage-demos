# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[{*.md,*.markdown}]
max_line_length = off
trim_trailing_whitespace = false

[{*.yaml,*.yml}]
indent_style = space
